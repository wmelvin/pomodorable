
Horizontal {
    height: 3;
}

CountdownDisplay {
    border: solid gray;
    content-align: center middle;
    color: greenyellow;
    margin: 0 1;
    max-width: 9;
    text-style: bold;
}

TimeDisplay {
    border: solid gray;
    content-align: center middle;
    color: green;
    margin: 0 1;
    max-width: 12;
}

Label {
    padding: 1;
}

#fr-times {
    content-align-vertical: middle;
}

#start {
    border: solid gray;
    color: green;
}

#pause {
    border: solid gray;
    color: yellow;
}

#resume {
    border: solid gray;
    color: green;
}

#extend {
    border: solid gray;
    color: teal;
}

#stop {
    border: solid gray;
    color: red;
}
